<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="retu.firstproject.Registration">


        <ImageView
            android:id="@+id/imageViewName"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/name_icon"
            android:layout_marginTop="10dp" />

        <EditText
            android:id="@+id/editTextName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imageViewName"
            android:layout_alignBottom="@+id/imageViewName"
            android:hint=" Enter Your Name"
            android:inputType="text"/>

        <ImageView
            android:id="@+id/imageViewLock"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/lock"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/imageViewName"/>

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imageViewLock"
            android:layout_alignBottom="@+id/imageViewLock"
            android:hint=" Enter Your Password"
            android:inputType="textPassword"/>


        <ImageView
            android:id="@+id/imageViewId"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/id"
            android:layout_marginTop="10dp"
            android:layout_below="@id/imageViewLock"/>

        <EditText
            android:id="@+id/editTextId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imageViewId"
            android:layout_alignBottom="@+id/imageViewId"
            android:hint=" Enter Your Id"
            android:inputType="number"/>


        <ImageView
            android:id="@+id/imageViewEmail"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/email"
            android:layout_marginTop="10dp"
            android:layout_below="@id/imageViewId"/>

        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imageViewEmail"
            android:layout_alignBottom="@+id/imageViewEmail"
            android:hint=" Enter Your Email"
            android:inputType="textEmailAddress"/>

        <ImageView
            android:id="@+id/imageViewPhone"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/phone"
            android:layout_marginTop="10dp"
            android:layout_below="@id/imageViewEmail"/>

        <EditText
            android:id="@+id/editTextPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageViewPhone"
            android:hint=" Enter Your Phone Number"
            android:inputType="number"
            android:layout_toRightOf="@+id/imageViewName"
            android:layout_toEndOf="@+id/imageViewName" />

        <ImageView
            android:id="@+id/imageViewCgpa"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/cgpa"
            android:layout_marginTop="10dp"
            android:layout_below="@id/imageViewPhone"/>

        <EditText
            android:id="@+id/editTextCgpa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imageViewCgpa"
            android:layout_alignBottom="@+id/imageViewCgpa"
            android:hint=" Enter Your Cgpa"
            android:inputType="numberDecimal"/>


        <ImageView
            android:id="@+id/imageViewGender"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/gender"
            android:layout_marginTop="10dp"
            android:layout_below="@id/imageViewCgpa"/>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:id="@+id/radioGroupGender"
            android:layout_below="@id/editTextCgpa"
            android:layout_toRightOf="@+id/imageViewGender">

            <RadioButton
                android:id="@+id/radioButtonMale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Male"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:checked="false"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="0dp"
                />

            <RadioButton
                android:id="@+id/radioButtonFemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Female"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:checked="false"
                android:layout_marginStart="100dp"
                android:layout_marginLeft="0dp"
                />

        </RadioGroup>

        <Button
            android:id="@+id/buttonSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/imageViewGender"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="100dp"
            android:layout_marginRight="0dp"
            android:layout_marginEnd="10dp"
            android:text="Save"
            android:onClick="saveClickAction"/>

        <Button
            android:id="@+id/buttonClear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/buttonSave"
            android:layout_alignBottom="@id/buttonSave"
            android:text="Clear"/>



    </RelativeLayout>



